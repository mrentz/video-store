<div id="quick-edit" style="display: none;">
  <div class="quick-edit-header clear-fix">
    <div class="inner clearfix">
      <h4 class="pull-left">
        <%= @qe_prefix || 'Quick Edit -' %>
        <span id="resource-name" data-original-resource-name="<%= @title %>">
          <%= @title %>
        </span>
      </h4>
      <a href="#" class="quick-edit-close pull-right"><i class="fa fa-close"></i></a>
      <div class="quick-edit-form-buttons pull-right">
        <%= button_tag class: 'pure-button pure-button-primary', id: 'quick-edit-submit' do %>
            <i class="fa fa-check"></i> Save
        <% end %>
        <%= button_tag class: 'pure-button btn-default hide', id: 'quick-edit-external-link' do %>
            <i class="fa fa-external-link"></i> Open
        <% end %>
      </div>
    </div>
  </div>
  <div id="quick-edit-body-wrapper">
    <div id="quick-edit-body" class="quick-edit-body">
      <%# populated via JS %>
    </div>
    <div class="quick-edit-footer pull-right">
      <div class="status-message">
        <%# populated via JS %>
      </div>
    </div>
  </div>
</div>
