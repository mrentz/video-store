<%# lots of indenting problems on this page, fix them all %>
    <div class="container">
      <div class="card round">
	<div class="container-fliud">
	  <div class="wrapper row">

	    <div class="preview col-md-4">
	      <div class="preview-pic tab-content">
		<div class="tab-pane active" id="pic-1">
		  <%= link_to image_tag(detailed[:thumbnail],
		      size: 400,   alt: "image missing"),
		      videos_path %>
		</div>
	      </div>
	    </div>

	    <div class="details col-md-8">
	      <h3 class="product-title">
		<%= link_to detailed[:title],
		    videos_path %>
		<date style="font-size:16px">(<%= detailed[:release_date] %>)</date></h3>
	      <p> <strong><%= detailed[:actors] %></strong></p>
	      <div class="rating">
		<div class="stars">
		  <% a = number_of_stars(detailed[:stars]) %>
		  <% a.each do |star| %>
		  <span class="fa <%= star %>"></span>
		  <% end %>
		  <span class="review-no"><%= "(#{rand(80..100)} " %> reviews) </span>
		</div>
	      </div>
	      <p class="product-description"><%= detailed[:theme] %></p>
	      <p class="product-description"><%= detailed[:description] %></p>
	      <h5 class="colors"><%= detailed[:content_rating] %>
		<span class="color orange not-available"
		      data-toggle="tooltip"
		      title="Not In store"></span>
		<span class="color green"></span>
		<span class="color blue"></span>
	      </h5>
	      <h4 class="price">current price: <span>$<%= rand(50..80) %></span></h4>
	      <p class="vote"><strong><%= rand(50..100) %>%</strong> of viewers enjoyed this movie!
		<strong>(<%= rand(100..1000) %> votes)</strong></p>
	      <h5 class="sizes">format:
		<span class="size" data-toggle="tooltip" title="small">VHS</span>
		<span class="size" data-toggle="tooltip" title="medium">Beta</span>
		<span class="size" data-toggle="tooltip" title="large">Blu-ray</span>
	      </h5>
	      <div class="action">
		<%= link_to  "add to cart", current_user,
		    class: "add-to-cart btn btn-default",
		    type: "button" %>
		<button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
	      </div>
	    </div>
	  </div>
	</div>
      </div>
    </div>
